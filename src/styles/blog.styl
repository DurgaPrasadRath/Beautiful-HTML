@import variables
@import mixins

.light-green-section
  background-color light_green
  padding 10px 10px 100px 10px
  color dark_green
  .white-box
    box-shadow 3px 3px 0 shadow_on_light_green
  @media screen and (min-width: 720px)
    padding 80px

.blog-intro
  padding 20px 10px 10px 10px
  min-height 275px
  .blog-title a
    font-weight bold
    border-bottom 0

.post-excerpt
  margin-top 1em

#blogs
  .extra-large-text
    margin 30px 0
    height 60px

  .large-text
    @media screen and (max-width: 1100px)
      font-size 25px

  .white-box
    vertical-align top

  .blog-nav-row
    width 95%

  .blog-nav
    text-align: center
    font-size 25px
    margin 20px auto
    display block

    @media screen and (min-width: 720px)
      border solid 1px dark_green
      padding 5px
      float left

  .older
    @media screen and (min-width: 720px)
      float right

  .page-counter
    tabular-nums()
    width 100%
    margin 20px auto
    text-align center
    font-size 50px

#blog-post
  .white-box
    width 100%
    img
      max-width 100%
    iframe
      width 100%
      margin 0 auto

  .light-green-section
    @media screen and (max-width: 720px)
      padding 5px
  .extra-large-text
    line-height 1.1
    font-variant-numeric: tabular-nums slashed-zero;  /* high-level property          */
    -moz-font-feature-settings: 'tnum' 'zero';        /* low-level (old Firefox)      */
    -webkit-font-feature-settings: 'tnum' 'zero';     /* low-level (old Webkit)       */
    font-feature-settings: 'tnum' on, 'zero' on;      /* low-level (all new browsers) */
    @media screen and (max-width: 720px)
      font-size 25px
      margin 10px auto
      height: auto
  .blog-index
    color neon_green
  .blog-content
    width 90%
    margin 10px auto
    p, h1, h2, h3, h4, h5, h6, a, hr, blockquote, code, em, i, pre, q, small, strong, sub, sup, time, u, link, ul, ol, li, table, caption
      max-width 660px
      margin-left auto
      margin-right auto
  .blog-post-nav
    margin 10px auto
  code[class*="language-"]
    font-size 80%