@import variables

.products
  background light_grey

.product-section 
  position relative
  margin 20px auto
  display flex
  

  > div
    flex-grow 1
    flex-basis 0

  .section-content
    align-self center
    max-width 380px
    
  @media screen and (max-width: 720px)
    flex-direction column
    width 95%
    &.caption-left .product-caption
      order 1
    .section-content
      max-width 100%

  .browser-frame
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background-image url("../assets/browser.svg")
    background-position center center
    background-repeat no-repeat
    z-index 1
    
.product-image, .product-video
  width 100%
  padding-top 100% // weird trick to keep aspect ratio square when scaling
  display inline-block
  position relative
  overflow hidden
  @media screen and (min-width: 720px)
    padding-top 60%

.product-video video
  position absolute
  top 3%
  left 1px
  width 100%
  height 100%
    
.try-product-link
  font-weight bold;
  