@import variables

.careers
  width 100%
  margin 0

  .white-box
    vertical-align top
  .careers-image
    margin 50px auto 50px auto
    text-align center
    img
      width 100%
      height auto
      
  .careers-header 
    background-position center center
    .extra-large-text
      color dark_green
      line-height 1.1
      height auto
      background url('../assets/screen-sand.gif')
      @media screen and (min-width: 720px)
        width 50%
        line-height 0.95
        padding 5px

  .apply-button 
    display block
    height calc(100% - 10px)
    background-color dark_green
    color neon_green
    font-weight 400
    line-height 100%
    box-sizing border-box
    font-size 25px
    letter-spacing 0.5px
    padding 10px
    margin-top 10px
    width 100%
    min-width 110px
    border-bottom 0
    .arrow
      float right
      top 0px
    &:hover
      background-color emerald_green
  .large-text
    padding 10px
  .posted
    float left
  .vertical-line
    float left
   .vertical-line.hidden-sm
      margin 5px 0 0 100px
      @media screen and (max-width: 720px)
        display: none
  .jobs-section
    width 100%
    display block
  .apply
    text-align: center
    float right
    @media screen and (min-width: 720px)
      max-width 120px


.job-box
  position relative
  min-height 120px
  padding-bottom 62px
  @media screen and (min-width: 720px)
    min-height 250px
  p.large-text
    width 85%
    margin-bottom 25px
  .meta-rect
    position absolute
    bottom 0
    